" ------ YCM Related Optoins ----------
function YcmToggle()
    if g:ycm_auto_trigger
        let g:ycm_auto_trigger=0
    else
        let g:ycm_auto_trigger=1
    endif
endfunction

nnoremap <leader>c :call YcmToggle()<CR>
